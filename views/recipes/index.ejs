<% include ../partials/headermain %>

<div class="container-fluid">

<thead>
<h1>Explore the Recipes at ChefPen</h1>
</thead>

<table class="table table-hover">
<tbody>

<% recipesDB.forEach(function(recipe){ %>
	<tr data-url='/recipes/<%= recipe._id %>/show'>	
		<td><img height="130" width="130" src= "<%= recipe.image %>" alt=""></td>
		<td><%= recipe.title %></td>
	</tr>
<% }) %>



</tbody>
</table>
</div>


