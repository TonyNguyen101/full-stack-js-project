<% include ../partials/header %>

<h1>Login to Chef Pen</h1>

<form action="/login" method="POST" class="form-horizontal">
	
	<div class="form-group">
		<label for="user" class="col-sm-2">Username:</label>
		<div class="col-sm-10">	
			<input type="text" id="userName" name="user[userName]" class="form-control" autofocus>
		</div>
	</div>

	<div class="form-group">
		<label for="password" class="col-sm-2">Password:</label>
		<div class="col-sm-10">	
			<input type="text" id="password" name="user[password]" class="form-control">
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">	
			<input type="submit" value="login" class="btn btn-primary">
		</div>
	</div>

</form>

<a href="/signup">Don't have an account? Sign up here</a>

<% include ../partials/footer %>