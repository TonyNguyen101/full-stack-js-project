<% include ../partials/headermain %>
<h1>show 1 user</h1>
<table class="table table-hover">
	
<thead>
	<tr>
		<td><img height="120" src="<%= user.picture %>" alt=""></td>
		<td><h1>	<%= user.userName %></h1> <br> <%= user.bio %>  </td>
	</tr>
</thead>


<tbody>

<% user.recipes.forEach(function(recipe){ %>
	<tr data-url='/recipes/<%= recipe._id %>/show'>	
		<td><img height="130" width="130" src= "<%= recipe.image %>" alt=""></td>
		<td><h3> <%= recipe.title %></h3></td>
	</tr>
<% }) %>


</tbody>
</table>


<% include ../partials/footer %>