<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<!-- Bootstrap: Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<link rel="stylesheet" href="/css/style.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script type="text/javascript" src="/js/comments.js"></script> 
</head>
<body>

<h1>One Recipe Show Page</h1>



<img height="250" width="250" src="<%= recipe.image %>" alt="">	
<%= recipe.title %>
<%= recipe._id %>
</br>
<% recipe.ingredients.forEach(function(ingredient){ %>
	
	<%= ingredient.displayQuantity %>
	<% if (ingredient.unit !== null){ %>
		<%= ingredient.unit %>	
	<% } %>
	<%= ingredient.name %>
	</br>
<% }) %>
</br>
<%= recipe.instructions %>
</br>

<form id="newCommentForm" action="/recipes/<%= recipe._id %>/comments" method="POST">
	<div class="form-group">
		<label for="comment[body]"></label>
      <input type="text" id="recipeId" value="<%= recipe._id %>">
      <input type="text" id="newComment" name="comment[body]" autofocus>
      <!-- <textarea name="comment[body]" id="comment[body]" cols="40" rows="5" autofocus></textarea> -->
  </div>
		<input type="submit" value="save" class="btn btn-lg btn-success">
</form>


<table class="table table-hover">
<tbody>




</tbody>
</table>

<% include ../partials/footer %>

