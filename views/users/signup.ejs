<% include ../partials/header %>

<h1>Signup for Chef Pen <br><small>and add build your own recipe book</small> </h1>

<form action="/signup" method="POST" class="form-horizontal">
	
	<div class="form-group">
		<label for="user" class="col-sm-2">Username:</label>
		<div class="col-sm-10">	
			<input type="text" id="userName" name="user[userName]" class="form-control" autofocus>
		</div>
	</div>

	<div class="form-group">
		<label for="password" class="col-sm-2">Password:</label>
		<div class="col-sm-10">	
			<input type="text" id="password" name="user[password]" class="form-control">
		</div>
	</div>

	<div class="form-group">
		<label for="picture" class="col-sm-2">Picture Link:</label>
		<div class="col-sm-10">	
			<input type="text" id="picture" name="user[picture]" class="form-control">
		</div>
	</div>
	
	<div class="form-group">
		<label for="bio" class="col-sm-2">A Little About You...</label>
		<div class="col-sm-10">	
			<textarea type="text" id="bio" name="user[bio]" class="form-control" cols="20" rows="5"></textarea>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">	
			<input type="submit" value="Sign Up" class="btn btn-primary">
		</div>
	</div>

</form>

<a href="/login">Already have an account? Login here</a>

<% include ../partials/footer %>